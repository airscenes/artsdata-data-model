@prefix dash: <http://datashapes.org/dash#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix schema: <http://schema.org/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix ads: <http://kg.artsdata.ca/shacl/> .


################
# Super Property Shapes
#   - used by more than one shape class
################
ads:SameAsShape
    sh:path schema:sameAs ;
    sh:minCount 0 ;
    sh:pattern "^http" ;
    sh:description "sameAs properties must have URIs" .

ads:NameSh
    sh:path schema:name ;
    sh:name "Name of event" ;
    sh:minCount 1 .

ads:NameWarningSh
    sh:path schema:name ;
    sh:severity sh:Warning ;
    sh:languageIn ( "en" "fr" ) ;
    sh:uniqueLang true ;
    sh:message "Lanague should be @en or @fr." .

################
# Event Shapes
################
ads:EventSeriesShape
    a sh:NodeShape ;
    sh:targetClass schema:EventSeries ;
    sh:node ads:EventShape ;
    sh:property ads:subEventPropertySh .

ads:subEventPropertySh
    a sh:PropertyShape ;
    sh:path schema:subEvent ;
    sh:minCount 1 ;
    sh:message "EventSeries must have alteast one subEvent property." .
    
ads:EventShape
    # TODO: Check that Event ID ends with #Event
    a sh:NodeShape ;
    sh:closed true ;

    # Sub-types of Event
    sh:targetClass  schema:Event, 
                    schema:EventSeries, 
                    schema:MusicEvent, 
                    schema:TheaterEvent, 
                    schema:ComedyEvent, 
                    schema:DanceEvent, 
                    schema:ExhibitionEvent, 
                    schema:Festival, 
                    schema:ChildrensEvent, 
                    schema:ScreeningEvent,
                    schema:EducationEvent, 
                    schema:FoodEvent, 
                    schema:Hackathon, 
                    schema:LiteraryEvent, 
                    schema:PublicationEvent,
                    schema:SaleEvent, 
                    schema:SocialEvent, 
                    schema:SportsEvent, 
                    schema:VisualArtsEvent ;

    sh:ignoredProperties ( rdf:type ) ;
    
    # Required Properties
    sh:property ads:NameSh, 
                ads:LocationSh, 
                ads:StartDateSh, 
                ads:MainEntityOfPageSh ; 

    # Check optional properties
    sh:property ads:OrganizerSh, 
                ads:PerformerSh, 
                ads:EventAttendanceModeSh, 
                ads:EventStatusSh, 
                ads:SubEventSh, 
                ads:EndDateSh, 
                ads:OffersSh ;

    # Warnings for recommended properties
    sh:property ads:DescriptionWarningSh, 
                ads:OrganizerWarningSh, 
                ads:PerformerWarningSh, 
                ads:ImageWarningSh, 
                ads:NameWarningSh,
                ads:MainEntityOfPageWarningSh, 
                ads:UrlWarningSh, 
                ads:EventAttendanceModeWarningSh, 
                ads:EventStatusWarningSh,
                ads:OffersWarningSh .

ads:StartDateSh
    sh:path schema:startDate ;
    sh:datatype xsd:dateTime ;
    sh:maxCount 1 ;
    sh:minCount 1 ;
    sh:name "Start date and time of Event" .

ads:EndDateSh
    sh:path schema:endDate ;
    sh:datatype xsd:dateTime ;
    sh:maxCount 1 ;
    sh:minCount 0 .

ads:LocationSh
    sh:path schema:location ;
    sh:maxCount 1 ;
    sh:node ads:PlaceShape .

ads:SubEventSh
    sh:path schema:subEvent ;
    sh:minCount 0 ;
    sh:node ads:EventShape .

ads:EventStatusSh
    sh:path schema:eventStatus ;
    sh:maxCount  1 ;
    sh:class schema:EventStatusType ;
    sh:in  (    schema:EventPostponed  
                schema:EventScheduled  
                schema:EventCancelled  
                schema:EventRescheduled  
                schema:EventMovedOnline )  .

ads:EventStatusWarningSh
    sh:path schema:eventStatus ;
    sh:severity sh:Warning ;
    sh:minCount  1 .

ads:EventAttendanceModeSh
    sh:path schema:eventAttendanceMode ;
    sh:maxCount  1 ;
    sh:class schema:EventAttendanceModeEnumeration ;
    sh:in  (    schema:OfflineEventAttendanceMode  
                schema:OnlineEventAttendanceMode 
                schema:MixedEventAttendanceMode )  .

ads:EventAttendanceModeWarningSh
    sh:path schema:eventAttendanceMode ;
    sh:severity sh:Warning ;
    sh:minCount  1 .

ads:UrlWarningSh
    sh:path schema:url ;
    sh:severity sh:Warning ;
    sh:minCount  1 .

ads:MainEntityOfPageSh
    sh:path schema:mainEntityOfPage ;
    sh:pattern "#WebPage$" ;
    sh:node ads:WebPageShape .

ads:MainEntityOfPageWarningSh
    sh:path schema:mainEntityOfPage ;
    sh:severity sh:Warning ;
    sh:minCount  1 .

ads:OffersSh
    # TODO: Add Offer node shape
    sh:path schema:offers ;
    sh:minCount  0 .

ads:OffersWarningSh
    sh:path schema:offers ;
    sh:severity sh:Warning ;
    sh:minCount  1 .

ads:DescriptionWarningSh
    sh:path schema:description ;
    sh:severity sh:Warning ;
    sh:languageIn ( "en" "fr" ) ;
    sh:uniqueLang true ;
    sh:minCount  1 .

ads:OrganizerSh
    sh:path schema:organizer ;
    sh:or (
        [ sh:node ads:PersonShape ; ]
        [ sh:node ads:OrganizationShape ; ]
    ) ;
    sh:message "organizer is not a valid Person or Organizatinon." .

ads:OrganizerWarningSh
    sh:path schema:performer ;
    sh:severity sh:Warning ;
    sh:node ads:AgentNameLanguageShape ;
    sh:minCount  1 .

ads:AgentNameLanguageShape
    a sh:NodeShape ;
    sh:property ads:NameWarningSh ;
    sh:message "Language of Agent (Person, Organization) missing @en or @fr." .

ads:PerformerSh
    sh:path schema:performer ;
    sh:or (
        [ sh:node ads:PersonShape ; ]
        [ sh:node ads:OrganizationShape ; ]
    ) ;
    sh:message "performer is not a valid Person or Organizatinon." .

ads:PerformerWarningSh
    sh:path schema:organizer ;
    sh:severity sh:Warning ;
    sh:node ads:AgentNameLanguageShape ;
    sh:minCount  1 .

ads:ImageWarningSh
   sh:path schema:image ;
    sh:severity sh:Warning ;
    sh:minCount  1 .

################
# WebPage Shape
################
ads:WebPageShape
    a sh:NodeShape ;
    sh:targetClass schema:WebPage ;
    sh:property ads:SdDatePublishedSh, 
                ads:WebPageUrlSh, 
                ads:InLanguageSh .

ads:WebPageUrlSh   
    sh:path schema:url ;
    sh:minCount 1 .
    
ads:InLanguageSh
    sh:path schema:inLanguage ;
    sh:minCount 1 .

ads:SdDatePublishedSh
    sh:path schema:sdDatePublished ;
    sh:datatype xsd:dateTime ;
    sh:maxCount 1 ;
    sh:minCount 1 .

################
# Person Shape
################
ads:PersonShape
    a sh:NodeShape ;
    sh:targetClass schema:Person ;
    # Super Shapes
    sh:property ads:NameSh, 
                ads:SameAsSh .


################    
# Organization Shape
################
ads:OrganizationShape
    a sh:NodeShape ;
    sh:targetClass schema:Orgnanization ;
    # Super Shapes
    sh:property ads:NameSh, 
                ads:SameAsSh .


################
# Place Shape 
################
ads:PlaceShape
    # TODO: Allow Postal Address OR Virtual Location
    a sh:NodeShape ;
    sh:targetClass schema:Place ;
    sh:closed true ;
    sh:ignoredProperties ( rdf:type ) ;
    sh:property ads:PlaceNameSh, 
                ads:PlaceAddressSh, 
                ads:SameAsShape .

ads:PlaceNameSh
    sh:path schema:name ;
    sh:languageIn ( "en" "fr" ) ;
    sh:uniqueLang true ;
    sh:minCount 0 .

ads:PlaceAddressSh
    sh:path schema:address ;
    sh:or (
        [ sh:node ads:PostalAddressShape ; ]
        [ sh:node ads:VirtualLocationShape ; ]
    ) .

################
# VirtualLocation Shape
################
ads:VirtualLocationShape
    a sh:NodeShape ;
    sh:targetClass schema:VirtualLocation ;
    sh:property ads:VirtualLocationUrlSh .

ads:VirtualLocationUrlSh
    sh:path schema:url ;
    sh:pattern "^http" ;
    sh:minCount 1 .

################
# PostalAddress Shape 
################
ads:PostalAddressShape
    a sh:NodeShape ;
    sh:targetClass schema:PostalAddress ;
    sh:closed true ;
    sh:ignoredProperties ( rdf:type ) ;
    sh:property ads:StreetAddressSh, 
                ads:addressCountrySh, 
                ads:addressRegionSh, 
                ads:postalCodeSh, 
                ads:addressLocalitySh .
    
ads:StreetAddressSh
    sh:path schema:streetAddress ;
    sh:maxCount 1 ;
    sh:minCount 1 ;
    sh:datatype xsd:string .
 
ads:addressCountrySh
    sh:path schema:addressCountry ;
    sh:maxCount 1 ;
    sh:minCount 1 ;
    sh:datatype xsd:string .

 ads:addressRegionSh
    sh:path schema:addressRegion ;
    sh:maxCount 1 ;
    sh:minCount 1 ;
    sh:datatype xsd:string .

ads:postalCodeSh
    sh:path schema:postalCode ;
    sh:maxCount 1 ;
    sh:minCount 1 ;
    sh:datatype xsd:string .

ads:addressLocalitySh
    sh:path schema:addressLocality ;
    sh:maxCount 1 ;
    sh:minCount 1 ;
    sh:datatype xsd:string .
